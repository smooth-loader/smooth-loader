{
    "name": "smooth-loader",
    "version": "1.1.4",
    "description": "This package allows you to lazy load your images using IntersectionObserver technology. It supports loading background images as well as the regular images with img tag.",
    "main": "lib/js/index.js",
    "types": "lib/js",
    "directories": {
        "lib": "lib"
    },
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc --watch",
        "publish": "npm login && npm publish"
    },
    "keywords": [
        "lazy loader",
        "lazy",
        "image loader",
        "lazy loading",
        "background image"
    ],
    "author": "Serhii Cho",
    "license": "MIT",
    "homepage": "https://smooth-loader.github.io",
    "devDependencies": {
        "typescript": "^5.8.3"
    }
}
